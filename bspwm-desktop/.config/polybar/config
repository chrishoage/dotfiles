;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = ${env:bg_alpha:#121b21}
background-alt = ${xrdb:color8:#4F5B66}
foreground = ${xrdb:foreground:#D8DEE9}
foreground-alt = ${xrdb:color8}
primary = ${xrdb:color1:#6699CC}
secondary = ${xrdb:color6:#C594C5}
selected = ${xrdb:color3}
alert = ${xrdb:color9:#EC5f67}

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/primary]
monitor = ${env:MONITOR:}
width = 100%
height = 30
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 0
overline-color = ${colors.secondary}
underline-size = 0
underline-color = ${colors.secondary}
line-size = 2

border-bottom-size = 0
border-bottom-color = ${colors.primary}

spacing = 1
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = Operator\ Mono\ Medium:pixelsize=11;2:style=Regular
font-1 = FontAwesome:size=10;3
font-2 = Siji:pixelsize=10;0
font-3 = icomoon\-feather:style=Regular:size=11;3

modules-left = bspwm bsp-create bspwm-mon
modules-right =  memory cpu temperature eth-up eth-down fs mic pulseaudio date yay powermenu

tray-position = right
tray-padding = 2

wm-restack = bspwm

[bar/secondary]
monitor = ${env:MONITOR:}
width = 100%
height = 30
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 0
overline-color = ${colors.secondary}
underline-size = 0
underline-color = ${colors.secondary}
line-size = 2

border-bottom-size = 0
border-bottom-color = ${colors.primary}

spacing = 1
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = Operator\ Mono:pixelsize=11;2:style=Regular
font-1 = icomoon\-feather:style=Regular:size=11;3

modules-left = bspwm bsp-create bspwm-mon

tray-position = none
tray-padding = 2

wm-restack = bspwm

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/fs]
type = internal/fs
interval = 25

mount-0 = /

format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.foreground-alt}
label-mounted = %free%

label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm

format = <label-state>

ws-icon-default = x

label-focused = %index%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-underline= ${colors.selected}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/bspwm-mon]
type = internal/bspwm

format = <label-monitor> <label-mode>


label-monocle = " "
label-tiled = " "
label-fullscreen = " "
label-floating = "FLT "
label-locked = "LKD "
label-sticky = "STKY "
label-private = "PRVT "
label-marked = "MRKD "

[module/bsp-create]
type = custom/script

format = ""
format-foreground = ${colors.foreground-alt}
exec = echo "+"
click-left = bspwm-create-ws
click-right = bspc desktop -r

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = %{A1:info-term -l "htop -s PERCENT_CPU":} %{A}
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${root.underline-color}
label = %{A1:info-term -l "htop -s PERCENT_CPU":}%percentage%%%{A}

[module/memory]
type = internal/memory
interval = 5
format = <label>
format-prefix = %{A1:info-term -l "htop -s PERCENT_MEM":} %{A}
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${root.underline-color}
label = %{A1:info-term -l "htop -s PERCENT_MEM":}%percentage_used%%%{A}

[module/eth-down]
type = internal/network
interface = eno2
interval = 1

format-connected-prefix = %{A1:info-term -l "bandwhich":} %{A}
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-foreground = ${colors.foreground}
label-connected = %{A1:info-term -l "bandwhich":}%downspeed:8%%{A}

label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground}

[module/eth-up]
type = internal/network
interface = eno2
interval = 1

format-connected-prefix = %{A1:info-term -l "bandwhich -s":} %{A}
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-foreground = ${colors.foreground}
label-connected = %{A1:info-term -l "bandwhich -s":}%upspeed:8%%{A}

label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

date = %a %d/%m/%y
date-alt = " %Y-%m-%d"

time = %I:%M%P
time-alt = %H:%M:%S

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${root.underline-color}

label = %date% %time%


[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
;sink = alsa_output.pci-0000_00_1f.3.analog-surround-51

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
use-ui-max = false

; Interval for volume increase/decrease (in percent points)
interval = 5

format-volume = <ramp-volume><label-volume>
format-muted = "<label-muted>  0%"
format-volume-underline = ${root.underline-color}
format-ramp-underline = ${root.underline-color}
format-muted-underline = ${root.underline-color}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.foreground-alt}

label-muted = ""
label-muted-foreground = ${colors.foreground-alt}
label-volume = %percentage:2%%

[module/mic]
type = custom/script
exec = "~/.config/polybar/scripts/mic-input-state.sh"
click-left = "pulseaudio-ctl mute-input"
format-foreground = ${colors.foreground-alt}

interval = 1

[module/temperature]
type = internal/temperature
interval = 1
hwmon-path = ${env:CPU_PACKAGE_HWMON}
warn-temperature = 60

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format = <label>
format-underline = ${root.underline-color}

format-warn-prefix = " "
format-warn = <label-warn>
format-warn-prefix-foreground = ${colors.foreground-alt}
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}


[module/powermenu]
type = custom/menu

label-open = 
label-open-foreground = ${colors.foreground-alt}
label-close = 
label-close-foreground = ${colors.foreground-alt}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

format-underline = ${root.underline-color}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = lock
menu-0-2-exec = "sleep 0.5; light-locker-command -a"

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/yay]
type = custom/script
exec = "~/.config/polybar/scripts/updates-arch-combined.sh"
click-left = info-term check-update
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

interval = 300


; vim: set syntax=dosini:
; code: language=ini
