#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	urxvt

# window, hidden window, and program launcher
alt + {_, super + } space
	rofi -modi "drun,window,hidden:./bin/bspwm-unhide" -show {drun,window} -show-icons -drun-show-actions

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
shift + alt + Escape
	pkill -x polybar; bspc quit

# close and kill
alt + {_,shift + }w
	bspc node -{c,k}

# set tiled layout
alt + k; b
	bspc desktop -l tiled

# set monocle layout
alt + k; f
	bspc desktop -l monocle

# swap the current node and the biggest node
alt + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
alt + k; {t,shift + t,w,shift + f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# set the node flags
alt + k; {l,s,p,h}
	bspc node -g {locked,sticky,private,hidden}

#
# focus/swap
#

# focus the node in the given direction
super + alt + {h,j,k,l}
	bspc node -f {west,south,north,east}

# swap the focused node in the given direction
ctrl + super + {h,j,k,l}
	bspc node -s {west,south,north,east}.local

# transplant the focused node in the given direction
#ctrl + super + {h,j,k,l}
#	bspc node -n {west,south,north,east}.local

# warp the focused node in the given direction
ctrl + shift + {h,j,k,l}
	$HOME/.config/bspwm/bspwm-warp {west,south,north,east}.local

# focus the next/previous node in the current desktop
#super + alt + {_,shift + }c
super + alt + {_,shift + }c
	bspc node -f {next,prev}.local

# focus or send the next/previous desktop in the current monitor
super + alt + {_,shift + }bracket{left,right}
	bspc desktop -{f,s} {prev,next}.local

# focus the next/previous monitor
super + alt + {p,n}
	bspc monitor -f {prev,next} --follow

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + alt + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
alt + k; alt + {1-9,0}
	bspc node -d '{1-9,10}'

# focus or send to the given desktop
alt + k; shift + {1-9,0}
	bspc node -m \^{1-9,10}

#
# preselect
#

# preselect the direction
ctrl + alt + {h,j,k,l,c}
	bspc node -p {west,south,north,east,cancel}

# preselect the ratio
ctrl + alt + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused desktop
ctrl + super + alt + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
alt + k; m : {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
alt + k; m : shift + {h,j,k,l}
	bspc node -z {left 20 0,bottom 0 -20,top 0 20,right -20 0}

# move a floating window
super + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# move/resize window
super + button1
	bspc pointer -g resize_side

# window manager
XF86Audio{LowerVolume,RaiseVolume,Mute} + {_,shift}
	pulseaudio-ctl {down,up,mute} {5,1}

ctrl + shift + Pause
	sleep 0.5; light-locker-command -a
#	dm-tool lock

Print
	flameshot gui
