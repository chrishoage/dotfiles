#
# wm independent hotkeys
#

# terminal emulator
super + Return
	termite

# program launcher
super + space
	rofi -show drun

# {program, window, workspace, emoji, hidden window} launcher
super + alt + space; {space, w, s, e, h}
	rofi -show {drun,window,workspaces,emoji,hidden}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# {Lower, Raise, Mute} volume
XF86Audio{LowerVolume,RaiseVolume,Mute} + {_,shift}
	pulseaudio-ctl {down,up,mute} {5,1}

XF86Audio{Prev,Next}
	playerctl --player=playerctld {previous,next}

XF86AudioPlay
	playerctl --player=playerctld play-pause

# lock computer
super + Pause
	sleep 0.5; light-locker-command -a

# screenshot tool
Print
	flameshot gui

# keybind reference
super + question
	sxhkd-ref

#
# bspwm hotkeys
#

# {quit, restart} bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# {close, kill} node
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

# create a workspace
super + {equal,plus}
	bspwm-create-ws {_,-f}

# remove focused workspace
super + {underscore,minus}
	bspwm-destroy-ws {-o,_}

#
# state/flags
#

# set the window state {tiled, pseudo_titled, floating, fullscreen}
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags {marked, hidden, locked, sticky, private}
super + ctrl + f ; {m,h,l,s,p}
	bspc node -g {marked,hidden,locked,sticky,private}

#
# focus/swap
#

# {focus, swap} the node in the given direction {west, south, north, east}
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# warp the focused node in the given direction {west, south, north, east}
super + alt + {h,j,k,l}
	bspwm-warp {west,south,north,east}.local

# focus the {next, previous} node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus or send the {next, previous} desktop in the current monitor
super + {_,shift + }bracket{left,right}
	bspc desktop -{f,s} {prev,next}.local

# focus the {previous, next} monitor
super + {p,n}
	bspc monitor -f {prev,next} --follow

# focus the last {node, desktop}
super + {shift +,_} Tab
	bspc {node,desktop} -f last

# focus the {older, newer} node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# {focus, send} to the given desktop
super + {_,shift +}{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

# send focused node to the given monitor
super + alt + {1-9}
	bspc node -m '^{1-9}'

#
# preselect
#

# preselect the direction {west, south, north, east}
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# code: language=sxhkdrc
