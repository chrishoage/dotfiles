#!/bin/bash
set -e

: "${PINENTRY_PROGRAM:=pinentry-rofi}"

MAX_RETRY=3
retry=0

login() {
  set +e
  OP_SESS_EVAL=$($PINENTRY_PROGRAM <<< GETPIN | grep -oP 'D \K.*' | op signin my 2>/dev/null)
  set -e
  eval $OP_SESS_EVAL
  echo "$OP_SESS_EVAL" | tee ~/.op/session
}

check-op-status() {
  set +e
  op list vaults >/dev/null 2>&1
  LOGGED_IN=$?
  set -e

  if [ "$retry" -ge "$MAX_RETRY" ]; then
    echo "max retries reached"
    exit 1
  fi

  if [ $LOGGED_IN -eq 127 ]; then
    echo "1password CLI tool 'op' not found"
    exit 2
  fi

  if [ ! $LOGGED_IN -eq 0 ]; then
    retry=$((retry + 1))
    login
    check-op-status
  else
    cat ~/.op/session
  fi
}

source ~/.op/session

if [[ ! -v OP_SESSION_my ]]; then
  login
fi

check-op-status
