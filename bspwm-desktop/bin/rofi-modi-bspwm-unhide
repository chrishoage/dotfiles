#!/bin/bash

windows=($(bspc query -N -n .window.hidden))


index-in-selection() {
  parts=($1)
  echo ${parts[0]}
}

if [[ -n $@ ]]; then
  index=$(index-in-selection $1)
  node="${windows[${index%% *}]}"
  bspc node $node -g hidden=off -n focused -f $node
else
  for i in "${!windows[@]}"; do printf "%s %s\n" $i "$(xtitle ${windows[i]})"; done
fi
