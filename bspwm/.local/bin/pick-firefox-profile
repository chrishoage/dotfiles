#!/bin/sh

choice=$(echo -e "Personal\nWork" | dmenu -no-custom -only-match -theme-str '#window {width: 400px; height: 200px; } @media (max-width: 1920) { window { fullscreen: false; } }' -i -p 'Firefox Profile')

case "$choice" in
  "Work")
    firefox-work "$@"
    ;;
  *)
    firefox "$@"
    ;;
esac
